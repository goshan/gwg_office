#rooms_show
#room_id
  房间ID：
  = @room.id
#room_name
  房间名称：
  = @room.name
#room_status
  房间状态：
  = @room.status
#room_players
  房间玩家：
  %table
    - @room.players.each do |player|
      %tr{:id => "room_player_id_#{player.id}"}
        %td= player.id
        %td= player.nick_name
        %td= player.win_count
        %td= player.loss_count
#start_game_button.hidden= link_to "开始游戏", game_room_path
#leave_room_button= link_to "离开房间", unjoin_room_path

#params
  #current_user_id.hidden= current_user.id
  #current_room_id.hidden= @room.id
